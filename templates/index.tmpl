<body>
    {{ if .Name }}
        <h1> Hey {{ .Name }}! </h1>
    {{ else }}
        <h1> Hey Friend! </h1>
    {{ end }}
    <p> Welcome to the FusionAuth Golang Client Example :) </p>

    {{ if (eq .Name "") }}

        <a href="http://{{.Host}}:{{.Port}}/oauth2/authorize?client_id={{.ClientID}}&response_type=code&redirect_uri={{.BaseUrl}}/oauth/redirect&scope=openid">
            Login
        </a>
    {{ else }}
        <p> You're logged in! </p>
        <a href="/logout" >
            Click here to Logout
        </a>
    {{ end }}
</body>
